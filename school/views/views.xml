                                <td><t t-esc="student.name"/></td>
                                <td> <t t-esc="student.age"/> </td>
                                <td> <t t-esc="student.gender"/></td>
                                <td> <t t-esc="student.company_id"/></td>
                                <td><button class="deleteBtn"></button></td>
                            </tr>
                </t>
            </tbody>
        </table>
        <script>

            const tableEl = document.getElementById('tbody');
            tableEl.addEventListener('click', onDeletRow);

            function onDeletRow(e){
                if (e.target.classList.contains('deleteBtn')){
                    return;
                }

                alert("clicked on the btn");
