<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_proposal" name="Show Sale Proposal" customize_show="True"
              inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Sales Proposal</t>
                <t t-set="url" t-value="'/my/proposals'"/>
                <t t-set="placeholder_count" t-value="'proposal_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_proposal" name="My Sales Orders">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Sales Proposal</t>
            </t>
            <t t-if="not orders">
                <p>There are currently no orders for your account.</p>
            </t>
            <t t-if="orders" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='d-none d-md-inline'>Sale Proposals #</span>
                            <span class='d-block d-md-none'>Ref.</span>
                        </th>
                        <th class="text-right">Order Date</th>
                        <th class="text-center"/>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <t t-foreach="orders" t-as="order">
                    <tr>
                        <td><a t-att-href="order.get_portal_url()"><t t-esc="order.name"/></a></td>
                        <td class="text-right">
                            <span t-field="order.date_order" t-options="{'widget': 'date'}"/>&amp;nbsp;
                            <span class='d-none d-md-inline' t-field="order.date_order"
                                  t-options="{'time_only': True}"/>
                        </td>
                        <td class="text-center">
                            <span t-if="order.state == 'done'" class="badge badge-pill badge-success">
                                <i class="fa fa-fw fa-check" role="img" aria-label="Done" title="Done"/>Done
                            </span>
                        </td>
                        <td class="text-right"><span t-field="order.amount_total"/></td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="sale_portal_proposal_template" name="Sales Proposal Portal Template"
              inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url"
                       t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (sale_proposal._name, sale_proposal.id, action.id)"/>
                </t>
            </t>

            <div class="row mt16 o_portal_sale_proposal_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <h2 class="mb-0"><b t-field="sale_proposal.amount_total" data-id="total_amount"/></h2>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn"
                                           t-att-href="sale_proposal.get_portal_url(report_type='pdf', download=True)"
                                           title="Download">
                                            <i class="fa fa-download"/> Download
                                        </a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                           t-att-href="sale_proposal.get_portal_url(report_type='pdf')"
                                           id="print_invoice_report" title="Print" target="_blank">
                                            <i class="fa fa-print"/> Print
                                        </a>
                                    </div>
                                </div>
                            </li>

                            <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true" role="complementary">
                                <ul class="nav flex-column bs-sidenav"></ul>
                            </li>

                            <li t-if="sale_proposal.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Salesperson</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                             t-if="sale_proposal.user_id.image_1024"
                                             t-att-src="image_data_uri(sale_proposal.user_id.image_1024)"
                                             alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                             t-if="not sale_proposal.user_id.image_1024"
                                             src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="sale_proposal.user_id"
                                              t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send
                                            message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!--                Page content-->
                <div id="quote_content" class="col-12 col-lg justify-content-end">
                    <!-- main content -->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}" id="portal_sale_content">
                        <div t-call="sale_portal_proposal.sale_portal_proposal_content"/>
                    </div>

                    <!-- bottom actions -->
                    <div t-if="sale_proposal.proposal_status not in ['approved','rejected']"
                         class="row justify-content-center text-center d-print-none pt-1 pb-4">
                        <div class="col-sm-auto mt8">
                            <a role="button" class="btn btn-primary" data-toggle="modal" data-target="#modalaccept"
                               href="#"><i class="fa fa-check"/>
                                Accept</a>
                        </div>
                        <div class="col-sm-auto mt8">
                            <a role="button" class="btn btn-danger" data-toggle="modal" data-target="#modaldecline"
                               href="#"><i class="fa fa-times"/> Reject</a>
                        </div>
                    </div>

                    <!-- chatter -->
                    <div id="sale_proposal_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="sale_proposal"/>
                        </t>
                    </div>
                </div><!-- // #quote_content -->
            </div>
        </xpath>
    </template>
    <template id="sale_portal_proposal_content" name="Sales Proposal Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
            <h2 class="my-0">
                <em t-esc="sale_proposal.name"/>
            </h2>
        </div>

        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations">
                <div class="row" id="so_date">
                    <div class="mb-3 col-6">
                        <strong>Proposal Date:</strong>
                        <span t-field="sale_proposal.date_order" t-options='{"widget": "date"}'/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <strong>Customer Address:</strong>
                        <address t-field="sale_proposal.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>
                </div>
            </div>

            <section id="details" style="page-break-inside: auto;" class="mt32">
                <h3 id="details">Pricing</h3>


                <table t-att-data-order-id="sale_proposal.id" t-att-data-token="sale_proposal.access_token"
                       class="table table-sm" id="sales_order_table">
                    <thead class="bg-100">
                        <tr>
                            <th colspan="2" class="text-left">Products</th>
                            <th class="text-right">Quantity</th>
                            <th t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                                Unit Price</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="sale_proposal.line_ids" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                            <tr>
                                <td><span widget="image" t-field="line.product_id.image_128"
                                          t-options="{'widget': 'image'}"/></td>
                                <td id="product_name"><span t-field="line.name"/></td>
                                <td class="text-right">
                                    <div id="quote_qty">
                                        <t t-if="sale_proposal.state in ['draft', 'sent']">
                                            <div class="input-group js_quantity_container pull-right">

                                                <div class="input-group-prepend d-print-none">
                                                    <span class="input-group-text d-none d-md-inline-block">
                                                        <a t-att-data-line-id="line.id" t-att-data-remove="True"
                                                           href="#" class="js_update_line_json" aria-label="Remove one"
                                                           title="Remove one">
                                                            <span class="fa fa-minus"/>
                                                        </a>
                                                    </span>
                                                </div>
                                                <!-- TODO add uom in this case too -->
                                                <input type="text" class="js_quantity form-control"
                                                       t-att-data-line-id="line.id" t-att-value="line.product_uom_qty"/>
                                                <div class="input-group-append d-print-none">
                                                    <span class="input-group-text d-none d-md-inline-block">
                                                        <a t-att-data-line-id="line.id" t-att-data-add="True" href="#"
                                                           class="js_update_line_json" aria-label="Add one"
                                                           title="Add one">
                                                            <span class="fa fa-plus"/>
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </t>
                                    </div>
                                </td>
                                <td class="text-right">
                                    <span class="oe_order_line_price_subtotal" t-field="line.price_unit"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <t t-call="sale_portal_proposal.sale_portal_proposal_content_totals_table"/>
                    </div>
                </div>
            </section>

        </div>
    </template>

    <template id="sale_portal_proposal_content_totals_table">
        <table class="table table-sm">
            <tr class="border-black">
                <td><strong>Subtotal</strong></td>
                <td class="text-right">
                    <span
                            data-id="total_untaxed"
                            t-field="sale_proposal.amount_untaxed"
                            t-options='{"widget": "monetary","display_currency": sale_proposal.pricelist_id.currency_id}'
                    />
                </td>
            </tr>
            <t t-foreach="sale_proposal.amount_by_group" t-as="amount_by_group">
                <tr>
                    <t t-if="amount_by_group[3] == 1 and sale_proposal.amount_untaxed == amount_by_group[2]">
                        <td>
                            <span t-esc="amount_by_group[0]"/>
                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]"
                                                                        t-options='{"widget": "monetary", "display_currency": sale_proposal.pricelist_id.currency_id}'/></span>
                        </td>
                        <td class="text-right">
                            <span t-esc="amount_by_group[1]"
                                  t-options='{"widget": "monetary", "display_currency": sale_proposal.pricelist_id.currency_id}'/>
                        </td>
                    </t>
                    <t t-else="">
                        <td>
                            <span t-esc="amount_by_group[0]"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="amount_by_group[1]"
                                  t-options='{"widget": "monetary", "display_currency": sale_proposal.pricelist_id.currency_id}'/>
                        </td>
                    </t>
                </tr>
            </t>
            <tr class="border-black">
                <td><strong>Total</strong></td>
                <td class="text-right">
                    <span data-id="total_amount" t-field="sale_proposal.amount_total"
                          t-options='{"widget": "monetary", "display_currency": sale_proposal.pricelist_id.currency_id}'/>
                </td>
            </tr>
        </table>
    </template>
</odoo>