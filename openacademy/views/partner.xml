<odoo>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="partner_instructor_from_view">
            <field name="name">partner.instructor</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="Inside">
                    <page string="Sessions">
                        <group>
                            <field name="instructor"/>
                            <field name="session_ids"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.action.act_window" id="content_list_action">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="configuration_menu" name="configuration"
                    parent="main_openacademy_menu"/>
        <menuitem id="contact_menu" name="Contacts"
                    parent="configuration_menu"
                    action="contact_list_action"/>
        

        <record model="ir.action.act_window" id="contact_cat_list_actions">
            <field name="name">contact Tags</field>
            <field name="res_model">res.partner.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="contact_cat_menu" name="Contact Tags"
                    parent="configuration_menu"
                    action="contact_list_action"/>

        <record model="res.partner.category" id="teacher1">
            <field  name="name">Teacher / level1</field>
        </record>
        <record model="res.partner.category" id="teacher2">
            <field name="name">Teacher / level2</field>
        </record>

</odoo>