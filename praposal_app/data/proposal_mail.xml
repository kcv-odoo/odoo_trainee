<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="proposal_email_template" model="mail.template">
            <field name="name">Proposal: Send by email</field>
            <field name="model_id" ref="praposal_app.model_proposal_order"/>
            <field name="email_from">${object.partner_id.email |safe}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Proposal (Ref ${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.partner_id.name}
                        <br /><br />
                        Here is your proposal with reference ${object.name}
                        <br /><br />
                        If you have queries feel free to ask.
                    </p>
                </div>
            </field>
        </record>
    </data>

</odoo>
