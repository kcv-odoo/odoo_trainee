<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_proposal_wizard" model="ir.ui.view">
        <field name="name">summary.report.proposal.form</field>
        <field name="model">summary.report.proposal</field>
        <field name="arch" type="xml">
            <form string="Time Off Summary">
                <group>
                    <field name="date_from"/>
                    <newline/>
                    <field name="date_to"/>
                    <newline/>
                    <field name="state"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_summary_report_proposal" model="ir.actions.act_window">
        <field name="name">Sale Proposal Summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">summary.report.proposal</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="odoo_trainee.model_sale_proposal" />
        <field name="binding_type">report</field>
    </record>

</odoo>