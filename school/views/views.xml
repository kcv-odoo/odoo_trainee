
<odoo>

    <template id="students_id" name="School Students">
        <t t-call="website.layout">
            <div class="container">
                <table id="table" class="table table-bordered" border="1">
                    <thead>
                        <tr>
                            <td><h4> Name </h4></td>
                            <td><h4> Age </h4></td>
                            <td><h4> Gender </h4></td>
                            <td><h4> Delete </h4></td>
                            <td><h4> Update </h4></td>
                        </tr>
                    </thead>
                    <form action="/add_student" class="inline">
                        <button style="margin-left:auto;margin-right:auto;display:block;margin-top:2%;margin-bottom:1%" class="btn btn-primary" >Create</button>
                        </form>
                    <tbody>
                        <t t-foreach="students" t-as="student">
                            <tr>
                                <td><t t-esc="student.name"/></td>
                                <td> <t t-esc="student.age"/> </td>
                                <td> <t t-esc="student.gender"/></td>
                                <td><a type="button" class="btn btn-primary" t-attf-href='/student/delete/#{student.id}'>Delete</a></td>
                                <td><a type="button" class="btn btn-primary" t-attf-href='/student/update?id=#{student.id}'>Update</a></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

</odoo>