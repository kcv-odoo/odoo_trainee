<odoo>
	<data noupdate="1">
		<record id="proposal_seq" model="ir.sequence">
	        <field name="name">Portal Proposal Sequence</field>
	        <field name="code">portal.proposal</field>
	        <field name="prefix">PR/</field>
	        <field name="padding">5</field>
	        <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
	    </record>
	   
        <record id="proposal_menu" model="website.menu">
            <field name="name">Proposal</field>            
            <field name="page_id" ref="proposal_page"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>   

         <record id="proposal_mail_template" model="mail.template">
            <field name="name">Portal Proposal: Send by email</field>
            <field name="model_id" ref="portal_proposal.model_portal_proposal"/>
            <field name="subject">Portal Proposal</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="xml">
				<div style="margin: 0px; padding: 0px;">
				    <p style="margin: 0px; padding: 0px; font-size: 13px;">
				        Dear ${object.partner_id.name}<br/><br/>				        
				        Please find the link to the proposal <a href="${object.link}">here</a>.
				        <br /><br />
				        Do not hesitate to contact us if you have any questions.
				        <br/><br/>
				        Best regards,
				        % if user.signature:
				            <br/>
				            ${user.signature | safe}
				        % endif
				    </p>
				</div>
			</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="False"/>
        </record>     
	</data>
</odoo>