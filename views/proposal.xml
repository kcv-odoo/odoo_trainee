<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_proposal_view_tree" model="ir.ui.view">
            <field name="name">Proposal</field>
            <field name="model">sale.proposal</field>
            <field name="arch" type="xml">
                <tree decoration-muted="proposal_status == 'reject'"
                decoration-success="proposal_status == 'accept'">
                    <field name="proposal_name"/>
                    <field name="salesman_id" widget="many2one_avatar_user" optional="show"/>
                    <field name="customer_id"/>
                    <field name="price_list_id"/>
                    <field name="proposal_date"/>
                    <field name="proposal_status"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ('cancel')" decoration-success="state in ('sent','confirmed')"/>
                </tree>
            </field>
        </record>

        <record id="sale_proposal_view_form" model="ir.ui.view">
            <field name="name">Sale Proposal</field>
            <field name="model">sale.proposal</field>
            <field name="arch" type="xml">
                <form string="Proposal">
                    <header>
                        <button name="action_proposal_mail_send" type="object" string="Sent Proposal" class="oe_highlight" attrs="{'invisible': [('state', 'in',['confirmed','cancel','sent'])]}"/>
                        <button name="action_confirmed_proposal" type="object" string="Confirm Proposal" class="oe_highlight" attrs="{'invisible': [('state', '!=','sent')]}"/>
                        <button name="action_cancel_proposal" type="object" string="Cancel Proposal" attrs="{'invisible': [('state', '!=','sent')]}"/>
                        <field name="state" widget='statusbar'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="preview_proposal"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-globe icon">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Customer</span>
                                    <span class="o_stat_text">Preview</span>
                                </div>
                            </button>
                        </div>
                        <group colspan="2" col="2">
                            <div class="oe_title">
                                <h1>
                                    <field name="proposal_name" readonly="1"/>
                                </h1>
                            </div>
                        </group>
                        <group colspan="4" col="4">
                            <field name="salesman_id"/>
                            <field name="customer_id"/>
                            <field name="price_list_id"/>
                            <field name="proposal_date"/>
                        </group>

                        <notebook>
                            <page string="Proposal Line">
                                <field name="proposal_line_ids">
                                    <tree editable ="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="unit_price"/>
                                        <field name="qty_proposed"/>
                                        <field name="tax_id" widget="many2many_tags"/>
                                        <field name="price_proposed"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                                <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="untaxed_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="taxes" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total"/>
                                </div>
                                <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="proposal_kanban_view">
            <field name="name">proposals.kanban.view</field>
            <field name="model">sale.proposal</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="proposal_name"/>
                    <field name="salesman_id"/>
                    <field name="customer_id"/>
                    <field name="price_list_id"/>
                    <field name="proposal_date"/>
                    <field name="proposal_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div>
                                    <strong>
                                        <field name="proposal_name"/>
                                    </strong>
                                </div>
                                <div>
                                    <strong>Customer :</strong>
                                    <field name="customer_id"/>
                                </div>
                                <div>
                                    <strong>Salesmen :</strong>
                                    <field name="salesman_id"/>
                                </div>
                                <div>
                                    <strong>products   :</strong>
                                    <field name="proposal_line_ids"/>
                                </div>

                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            dsjbh
                                        </tr>

                                        <tr>
                                            <td>Customer</td>
                                            <td><field name="customer_id"/></td>
                                        </tr>
                                        <tr>
                                            <td>Salesman</td>
                                            <td><field name="salesman_id"/></td>
                                        </tr>
                                        <tr>
                                            <td>Product</td>
                                            <td><field name="proposal_line_ids"/></td>
                                        </tr>

                                        <tr>
                                            <td>State</td>
                                            <td><field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ('cancel')" decoration-success="state in ('sent','confirmed')"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="float-right">
                                    <field name="salesman_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>