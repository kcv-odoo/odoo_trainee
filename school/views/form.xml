<odoo>

	<record id="meny_student_form12" model="website.menu">
		<field name="name">Create Student</field>
		<field name="url">/add_student</field>
		<field name="parent_id" ref="website.main_menu"/>
		<field name="sequence">55</field>
	</record>

	<template id="create_student" name="Create Student">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure">
					<div class="container">
						<form role="form" action="/create/webstudent" method="POST">
							<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
							<div class="form-group">
								<lable for="name" class="control-label"> Name</lable>
								<input type="text" name="name"  id="student_name" t-att-value="name" class="form-control" required="required"/>
							</div>
							<div class="form-group">
								<lable for="description" class="control-label"> Despriction</lable>
								<input type="text" name="description" t-att-value="description" id="student_description" class="form-control"/>
							</div>
							<div class="form-group">
								<lable for="age" class="control-label"> Age</lable>
								<input type="number" name="age" t-att-value="age" id="student_age" default="0" class="form-control"/>
							</div>
							<div class="form-group">
  									<label for="gender"> Gender</label>
  									<select name="gender" t-att-value="gender" id="student_gender">
    								<option value="male">Male</option>
   							 		<option value="female">Female</option>
   									</select>
   							</div>
   							
							<!-- <div class="form-group">
								<lable for="date_from" class="control-label" data-date-format="MM DD YYYY"> From</lable>
								<input type="datetime-local" name="date_from" t-att-value="date_from" id="student_date_from" class="form-control"/>
							</div>
							<div class="form-group">
								<lable for="date_to" class="control-label" data-date-format="MM DD YYYY"> To</lable>
								<input type="datetime-local" name="date_to" t-att-value="date_to" id="student_date_to" class="form-control"/>
							</div> -->
							<div class="clearfix oe_login_buttons">
								<button type="submit" class="btn btn-primary pull-left">Add</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="update_student" name="Update Student">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure">
					<div class="container">
						<form role="form" action="/edit/student" method="POST">
							<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
							<input type="hidden" name="id" t-att-value="student_data.id"/>
							<div class="form-group">
								<lable for="name" class="control-label"> Name</lable>
								<input type="text" name="name"  id="student_name" t-att-value="student_data.name" class="form-control" required="required"/>
							</div>
							<div class="form-group">
								<lable for="description" class="control-label"> Despriction</lable>
								<input type="text" name="description" t-att-value="student_data.description" id="student_description" class="form-control"/>
							</div>
							<div class="form-group">
								<lable for="age" class="control-label"> Age</lable>
								<input type="number" name="age" t-att-value="student_data.age" id="student_age" default="0" class="form-control"/>
							</div>
							<div class="form-group">
  									<label for="gender"> Gender</label>
  									<select name="gender" t-att-value="student_data.gender" id="student_gender">
    								<option value="male">Male</option>
   							 		<option value="female">Female</option>
   									</select>
   							</div>
   							
							<!-- <div class="form-group">
								<lable for="date_from" class="control-label" data-date-format="MM DD YYYY"> From</lable>
								<input type="datetime-local" name="date_from" t-att-value="date_from" id="student_date_from" class="form-control"/>
							</div>
							<div class="form-group">
								<lable for="date_to" class="control-label" data-date-format="MM DD YYYY"> To</lable>
								<input type="datetime-local" name="date_to" t-att-value="date_to" id="student_date_to" class="form-control"/>
							</div> -->
							<div class="clearfix oe_login_buttons">
								<button type="submit" class="btn btn-primary pull-left">Update</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</t>
	</template>

	<record id="student_thanks" model="website.page">
		<field name="name">Thanks</field>
		<field name="type">qweb</field>
		<field name="url">/student-thank-you</field>
		<field name="website_published">True</field>
		<field name="key">school.student_thanks</field>
		<field name="arch" type="xml">
			<t name="Thanks" t-name="school.student_thanks">
				<t t-call="website.layout">
					<div class="container">
						<h1>Thanks</h1>
						<div class="row">
							<div class="col-lg-8">
								<div class="alert alert-success" role="status">
									Your message has been sent successfullty.
								</div>
								<p>
									We will gwt back to you
								</p>
							</div>
						</div>
					</div>
				</t>
			</t>
		</field>
	</record>

</odoo>