<odoo>
	<record model="ir.ui.view" id="course_list">
      <field name="name">openacademy course</field>
      <field name="model">openacademy.course</field>
      <field name="priority" eval='2'/>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="course_list_1">
      <field name="name">openacademy course</field>
      <field name="model">openacademy.course</field>
      <field name="priority" eval='1'/>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="course_form">
      <field name="name">openacademy course.form</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
	    <form string="Idea form">
		    <group colspan="4">
		        <group colspan="2" col="2">
		            <separator string="Course Name" colspan="2"/>
		            <field name="name"/>
		            <field name="responsible_id" options="{'no_open': True, 'no_create': True}"/>
		            <field name="session_ids" options="{'no_open': True, 'no_create': True}"/>
		        </group>

		        <group colspan="2" col="2">
		            <separator string="Description" colspan="2"/>
		            <field name="description"/>
		        </group>

		        <notebook colspan="4">
		            <page string="Comment">
		                <field name="comment" nolabel="1"/>
		            </page>
		        </notebook>
	    	</group>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
		</form>
	  </field>
	</record>

  

	<record id="openacademy_search_view" model="ir.ui.view">
        <field name="name">openacademy.search</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="description"/>
                <field name="responsible_id"/>
                <filter name="my_courses" string="My Courses"
                            domain="[('responsible_id', '=', uid)]"/>
                <group string="Group By">
                    <filter name="by_responsible" string="Responsible" context="{'group_by': 'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

	<record model="ir.actions.act_window" id="action_openacademy_course">
    <field name="name">Openacademy Course</field>
    <field name="res_model">openacademy.course</field>
    <field name="view_mode">tree,form</field>
	</record>

	<record model="ir.actions.act_window" id="action_openacademy_course_1">
    <field name="name">Openacademy Course 1</field>
    <field name="res_model">openacademy.course</field>
    <field name="view_mode">tree,form</field>
    <field name="context" eval="{'search_default_my_courses': 1}"/>
    <field name="view_id" ref="course_list"/>
	</record>
	
	<menuitem id="menu_openacademy_course" parent="openacademy.menu_root" name="Courses" sequence="10"
          action="action_openacademy_course"/>
    <menuitem id="menu_openacademy_course_1" parent="openacademy.menu_root" name="Courses_2" sequence="12"
          action="action_openacademy_course_1"/>
</odoo>