<odoo>
  <data>
    <record model="ir.ui.view" id="proposal_order_list">
      <field name="name">rrt.proposal.list</field>
      <field name="model">proposal.order</field>
      <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="partner_id"/>
            <field name="date_order"/>
            <field name="confirm_date"/>
            <field name="state"/>
            <field name="amount_untaxed" sum="Total Proposed Ammount" widget="monetary" />
            <field name="accepted_total" states="proposal_accepted" sum="Total Accepted Ammount" widget="monetary" />
          </tree>   
      </field>
    </record>

    <record model="ir.ui.view" id="proposal_order_form">
      <field name="name">proposal.order.form</field>
      <field name="model">proposal.order</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="preview_proposal_order" class ='oe_highlight' string="Preview" type="object" states='sent,confirm'/>
            <button name="action_proposal_send" string="Send Email" type="object" states="draft" class="btn-primary"/>
           <!--  <button name="action_sent" class ='oe_highlight' string="Sent" states='draft' type="object"/> -->
            <button name='action_confirm' string='Confirm' class ='oe_highlight' states='sent,proposal_accepted' type='object'/>
            <button name='action_cencle' string='Cancel' class = 'oe_highlight' states='draft,sent,proposal_accepted,confirm' type='object'/>
            <field name='state' widget='statusbar' statusbar_visible='draft,sent,proposal_accepted,confirm,cancel'/>
           </header>
          <sheet>
             <h1><strong><field name="name" /></strong></h1>
             <group>
            <group>
            <field name="partner_id"/>
            <!-- <field name="currency_id"/> -->
            </group>
            <group>
            <field name="date_order"/>
          </group>
        </group>
            <notebook>
              <page string="Proposal Line" name="proposal_lines">
                <field name="proposal_line" widget="section_and_note_one2many" >
                  <tree editable="bottom">
                    <field name="product"/>
                    <field name="name" widget='section_and_note_text'/>
                    <field name="qty_propos"/>
                    <field name="price_propos" />
                    <field name="qty_acept"/>
                    <field name="price_acept" />
                    <field name="price_subtotal" />
                  </tree>
                </field>
              </page>
            </notebook>
              <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="amount_untaxed" class="oe_subtotal_footer_separator oe_inline o_td_label" widget='monetary'/>
                                <field name="accepted_total" class="oe_subtotal_footer_separator oe_inline o_td_label" widget='monetary'/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="total" />
                                </div>
                                <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            </group>

              <field name="note" class="oe_inline" placeholder="Terms and conditions... (note: you can setup default ones in the Configuration menu)"/>
              <div class="oe_clear"/>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers"/>
              <field name="activity_ids" widget="mail_activity"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    <record model="ir.actions.act_window" id="proposal_action_window">
      <field name="name">Proposal</field>
      <field name="res_model">proposal.order</field>
      <field name="view_mode">tree,form</field>
    </record>
   
    <menuitem name="Proposal" id="rrt_prooposal_menu_root"/>

    <menuitem name="Proposal" id="rrt_proposal_menu" parent="rrt_prooposal_menu_root"
              action="proposal_action_window"/>
    
  </data>
</odoo>