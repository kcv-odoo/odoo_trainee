
<odoo>

    <template id="students_id" name="School Students">
        <t t-call="website.layout">
            <div class="container">
                Hello
                <table class="table table-bordered" border="1">
                    <thead>
                        <tr>
                            <td><h4> Name </h4></td>
                            <td><h4> Age </h4></td>
                            <td><h4> Gender </h4></td>
                            <td><h4> Company </h4></td>
                            <td><h4> Delete </h4></td>
                        </tr>
                    </thead>
                    <tbody>
