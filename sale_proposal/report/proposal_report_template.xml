<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_proposalorder_document">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <t t-set="address">
                <div t-field="doc.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
            </t>
            <div class="page">
                <div class="oe_structure"/>
                <h2 class="mt16">
                    <t>
                        <span>Proposal # </span>
                    </t>
                    <span t-field="doc.name"/>
                </h2>
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.date_order" class="col-auto mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>
                <table class="table table-sm o_main_table">
                    <thead style="display: table-row-group">
                        <tr>
                            <th style="text-align: center; vertical-align: middle;">Products</th>
                            <th style="text-align: center; vertical-align: middle;">Proposed Quantity</th>
                            <th style="text-align: center; vertical-align: middle;">Proposed Price</th>
                            <th style="text-align: center; vertical-align: middle;">Accepted Quantity</th>
                            <th style="text-align: center; vertical-align: middle;">Accepted Price</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                         <t t-foreach="doc.proposal_line_ids" t-as="line">
                        <tr>
                            <td id="product_name" style="text-align: center; vertical-align: middle;">
                                <img t-att-src="'data:image/png;base64,%s' % to_text(line.product_id.image_1920)" style="max-height: 50px;"/>
                                <span t-field="line.name" style="color:#267372"/>
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                                <div id="quote_qty">
                                    <span t-field="line.qty_proposed"/>
                                </div>
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                                <div id="quote_qty">
                                    <span t-field="line.price_proposed"/>
                                </div>
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                                <div id="quote_qty">
                                    <span t-field="line.qty_accepted"/>
                                </div>
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                                <div id="quote_qty">
                                    <span t-field="line.price_accepted"/>
                                </div>
                            </td>
                        </tr>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td style="text-align: center; vertical-align: middle;" >
                                    <span
                                        class="total_accepted_amount"
                                        data-id="total_untaxed"
                                        t-field="doc.amount_total_accepted"
                                        t-options='{"widget": "monetary","display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td style="text-align: center; vertical-align: middle;">
                                    <span class="total_accepted_amount" data-id="total_amount" t-field="doc.amount_total_accepted" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="report_proposalorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale_proposal.report_proposalorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>