<?xml version="1.0" encoding="utf-8"?>
    <odoo>

          <record id="sale_order_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              <field name="partner_id" position="after">
                <field name="name"/>
              </field>
            </field>
          </record>

            <record id="student_tree_view" model="ir.ui.view">
              <field name="name">school.student.tree</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <tree string="Students">
                  <field name="name"/>
                  <field name="age"/>
                  <field name="description"/>
                  <field name="gender" optional="hide"/>
                </tree>
              </field>
            </record>

            <record id="student_calendar_view" model="ir.ui.view">
              <field name="name">school.student.calendar</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <calendar string="Students" date_start="date_from" date_stop="date_to" color="gender" quick_add="False" mode="month">
                  <field name="name"/>
                  <field name="company_id"/>
                </calendar>
              </field>
            </record>

             <record id="student_gantt_view" model="ir.ui.view">
              <field name="name">school.student.gantt</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <gantt string="Students" date_start="date_from" date_stop="date_to" default_group_by='gender'>
                  <field name="name"/>
                  <field name="age"/>
                </gantt>
              </field>
            </record>

            <record id="student_kanban_view" model="ir.ui.view">
                <field name="name">school.student.kanban</field>
                <field name="model">school.student</field>
                <field name="arch" type="xml">
                    <kanban default_group_by="gender">
                        <field name="name"/>
                        <field name="image"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <templates>
                          
                          <t t-name="kanban-box">
                                <div t-attf-class="oe_kanban_global_click">
                                    <div class="o_kanban_image">
                                        <img alt="Avatar" t-att-src="kanban_image('school.student', 'image',record.image.raw_value)"/>
                                    </div>
                            <!-- <t t-name="kanban-box">
                                <div class="oe_kanban_global_click_o_kanban_record_has_image_fill_o_school_student_kanban">
                                  <t t-if="record.image.raw_value">
                                    <div class="o_kanban_image_fill_left d-none d-md-block"/>
                                      <img t-att-src="kanban_image('test.test','image_medium',record.assigned_user.raw_value)"/> -->
                                      <!-- t-attf-style='background-image:url('kanban_image('hospital.patient', 'image', record.id.raw_value)}')'/>
                                  </t>
                                  <t t-else="">
                                    <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "school/static/description/avatar.png"'/>
                                  </t> -->
                                  <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="display_name"/></strong>
                                    <div class="o_kanban_tag_section"/>
                                    <ul>
                                      <li>Age : <field name="age"/></li>
                                      <li>Gender : <field name="gender"/></li>
                                    </ul>
                                  </div>
                                </div>
                          </t>
                        </templates>
                  </kanban>
              </field>
            </record>

            
            <record id="student_pivot_view" model="ir.ui.view">
              <field name="name">school.student.pivot</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <pivot string="Students">
                </pivot>
              </field>
            </record>

            <record id="student_graph_view" model="ir.ui.view">
              <field name="name">school.student.graph</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <graph string="Students">
                  <field name="name"/>
                  <field name="gender"/>
                </graph>
              </field>
            </record>

            <record id="student_form_view" model="ir.ui.view">
              <field name="name">school.student.form</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <form string="Students">
                  <header>
                    <button name="%(wiz_test_action)d" string="Update Age" type="action" class="oe_highlight"/>

                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" states="confirm" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>      
                  </header>
                      
                  <sheet>
                    
                    <field name="image" style="float:left" widget="image" class="oe_avatar"/>

                    <widget name="web_ribbon" text="Male" attrs="{'invisible': [('gender', '=' , 'female')]}" width="5px" height="9px"/>
                    <widget name="web_ribbon" text="Female" attrs="{'invisible': [('gender', '=' , 'male')]}" width="5px" height="200px"/>
                    <br/><br/> <br/> <br/> <br/> <br/>     
                    <div class="oe_title">
                      <h1>
                        <field name="name"></field>
                      </h1>
                    </div>
                    <group>
                      <group>
                        <field name="gender"></field>
                      </group>
                      <group>
                        <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                        <field name="date_to" widget="daterange" options="{'related_end_date': 'date_from'}"/>
                        <field name="age"/>
                        <field name="description"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="company_ids" widget="many2many_tags"/>
                      </group>
                    </group>
                    <notebook position="inside">
                    <page string="Student" name="student">
                      <field name="students_lines">
                        <tree editable="bottom">
                          <field name="product_id"/>
                          <field name="product_qty"/>
                          <field name="student_id" invisible="1"/>
                        </tree>
                        <form>
                          <group>
                            <group>
                              <field name="product_id"/>
                            </group>
                            <group>
                            <field name="product_qty"/>
                            </group>
                        </group>
                      </form>
                    </field>
                      <group>
                      <field name="age"/>                      
                    </group>
                    <group>
                      <field name="description"/>
                    </group>
                    </page>
                    </notebook>
                  </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail.followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                  </div>
                </form>
               </field>
          </record>   
              
            <record id="student_search_view" model="ir.ui.view">
              <field name="name">school.student.search</field>
              <field name="model">school.student</field>
              <field name="arch" type="xml">
                <search string="Students">
                  <field name="name" filter_domain="[('name','ilike',self)]" string="Name"/>
                  <field name="description" filter_domain="[('description','ilike',self)]" string="Description"/>
                  <searchpanel class="">
                    <field name="gender" icon="fa-users"/>
                  </searchpanel>
                  </search>
                </field>
            </record>

            <record id="action_student" model="ir.actions.act_window">
              <field name="name">Students</field>
              <field name="type">ir.actions.act_window</field>
              <field name="res_model">school.student</field>
              <field name="view_mode">tree,calendar,gantt,kanban,pivot,graph,form,search</field>
              <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                  Create Your Students here!!!
                </p>
              </field>
            </record>

