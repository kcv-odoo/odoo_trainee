<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="sale_portal_proposal_category">
        <field name="name">Sale Proposal</field>
        <field name="description">Sale Proposal</field>
        <field name="sequence">101</field>
    </record>
    <record id="group_sale_portal_proposal_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="sale_portal_proposal.sale_portal_proposal_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will have access to all data in the sales proposal application.</field>
    </record>

    <record id="sale_portal_proposal_rule_portal" model="ir.rule">
        <field name="name">Portal Proposal</field>
        <field name="model_id" ref="sale_portal_proposal.model_sale_portal_proposal"/>
        <field name="domain_force">[('message_partner_ids', 'child_of', [user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
    </record>

    <record id="sale_portal_proposal_line_rule_portal" model="ir.rule">
        <field name="name">Portal Sales Portal Proposal Line</field>
        <field name="model_id" ref="sale_portal_proposal.model_sale_portal_proposal_line"/>
        <field name="domain_force">[
            ('order_id.message_partner_ids', 'child_of', [user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    </record>
</odoo>