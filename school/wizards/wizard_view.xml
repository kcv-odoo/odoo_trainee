<odoo>
	<data>
		<record id="wiz_test" model="ir.ui.view">
			<field name="name">wiz.test</field>
			<field name="model">student.wiz</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<group>
							<field name="age"/>
						</group>
					</group>

					<footer>
						<button string="Update" type="object" name="updat_wiz"/>
						<button string="Cancel" special="cancel" class="btn btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="wiz_test_action" model="ir.actions.act_window">
			<field name="name">wiz.test</field>
			<field name="res_model">student.wiz</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record> 
	</data>
</odoo>
