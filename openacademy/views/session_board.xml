<?xml version="1.0"?>
<odoo>

        <reocrd model="ir.action.act_window" id="act_session_graph">
            <field name="name">Attendees by course</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_mode">graph</field>
            <field name="view_id"
                    ref="openacademy.openacademy_session_graph_view"/>
        </record>

        <record model="ir.actions.act_window" id="act_session_calendar">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="openacademy.session_calendar_view"/>
        </record>

        <record model="ir.actions.act_window" id="act_course_list">
            <field name="name">Course</field>
            <field name="res_model">openacademy.course</filed>
            <filed name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="board_session_from">
            <field name="name">Session Dashboard From</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <filed name="arch" type="xml">
                <from string="session Dashboard">
                    <board style="2-1">
                        <column>
                            <action
                                string="Attendee by course"
                                name="%(act_session_graph)d"
                                height="150"
                                width="510"/>
                            <action
                                string="Session"
                                name="%(act_session_calendar)d"/>
                        </column>
                        <column>
                            <action
                                string="Courses"
                                name="%(act_course_list)d"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="open_board_session">
            <field name="name">Session Dashboard</field>
            <filed name="res_model">board.board</field>
            <field name="view_mode">menu</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="board_session_from"/>
        </record>

        <menuitem
            name="Session Dashboard" parent="base.menu_reporting_dashboard"
            action="open_board_session"
            sequence="1"
            id="menu_board_session"/>

</odoo>