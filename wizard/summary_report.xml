<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_sale_proposal_wizard" model="ir.ui.view">
            <field name="name">summary.report.proposal.form</field>
            <field name="model">summary.report.proposal</field>
            <field name="arch" type="xml">
                <form string="Time Off Summary">
                    <group>
                        <field name="date_from"/>
                        <newline/>
                        <field name="date_to"/>
                        <newline/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
</odoo>
